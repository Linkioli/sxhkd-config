# Launch terminal
super + Return 
	alacritty

# Launch browser
super + b
	firefox

# Run rofi
super + semicolon  
	rofi -show drun

# file manager
super + t
	thunar

# flameshot screenshot tool
alt + semicolon
    flameshot gui

# launch obsidian
super + y
	flatpak run md.obsidian.Obsidian

# toggle keyboard layouts between qwerty and colemak
super + z
	sleep 0.1 && if setxkbmap -query | grep -q "colemak"; then setxkbmap us; else setxkbmap us -variant colemak; fi

# refresh sxhkd
super + Escape
	pkill -USR1 -x sxhkd

